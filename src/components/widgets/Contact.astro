---

interface CallToAction {
  text: string;
  href: string;
  icon?: string;
}
interface Person {
  name: string;
  position: string;
  phone?: string;
}

export interface Props {
  title?: string;
  subtitle?: string;
  callToAction?: string | CallToAction;
  callToAction2?: string | CallToAction;
  person?: string | Person;
  person2?: string | Person;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  content = await Astro.slots.render('content'),
} = Astro.props;
---

<section class="relative md:-mt-[76px]">
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
    <div class="py-12 md:py-20 lg:py-0 lg:flex lg:items-center lg:h-screen lg:gap-8">
      <div class="basis-1/2 text-center lg:text-left pb-10 md:pb-16 mx-auto">
        {
          title && (
            <h1
              class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading "
              set:html={title}
            />
          )
        }
        <div class="max-w-3xl mx-auto lg:max-w-none">
          {subtitle && <p class="text-xl text-muted mb-6 " set:html={subtitle} />}
          <div
            class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4 lg:justify-start lg:m-0 lg:max-w-7xl"
          >
          </div>
        </div>
        {content && <Fragment set:html={content} />}
      </div>
      <div class="basis-1/2">
        <form class="relative m-auto max-w-5xl grid gap-4">
          <label for="nume"></label>
          <input
            type="text"
            name="nume"
            id="nume"
            placeholder="Nume"
            class="w-full h-12 px-4 text-lg text-gray-900 placeholder-gray-400 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent"
          />
          <label for="email"></label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Email"
            class="w-full h-12 px-4 text-lg text-gray-900 placeholder-gray-400 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent"
          />
          <label for="telefon"></label>
          <input
            type="tel"
            name="telefon"
            id="telefon"
            placeholder="Telefon"
            class="w-full h-12 px-4 text-lg text-gray-900 placeholder-gray-400 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent"
          />
          <label for="mesaj"></label>
          <textarea
            name="mesaj"
            id="mesaj"
            placeholder="Mesaj"
            class="w-full h-24 px-4 text-lg text-gray-900 placeholder-gray-400 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent"
          ></textarea>
          <button
            type="submit"
            class="btn btn-primary w-full h-12 text-lg font-semibold rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent"
          >
            Trimite mesajul
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
